<?xml version="1.0" encoding="UTF-8"?>
<FindBugsFilter>
    <!-- Lombok-generated getters may expose mutable internal representation -->
    <Match>
        <Bug pattern="EI_EXPOSE_REP,EI_EXPOSE_REP2"/>
    </Match>

    <!-- Application entry point classes -->
    <Match>
        <Class name="~.*Application$"/>
    </Match>

    <!-- Test classes -->
    <Match>
        <Class name="~.*(Test|Tests|IT)$"/>
    </Match>
</FindBugsFilter>
